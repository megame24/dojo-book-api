{
  "ADMIN": {
    "inherits": "USER",
    "allow": {
      "/categories": ["POST"]
    },
    "deny": {}
  },
  "USER": {
    "inherits": "GUEST",
    "allow": {
      "/rewards": ["GET"],
      "/logbooks": ["POST"],
      "/logbooks/:logbookId": ["PUT"],
      "/logbooks/:logbookId/logs": ["POST"],
      "/logbooks/:logbookId/logs/:logId": ["PUT", "DELETE"],
      "/logbooks/:logbookId/goals": ["POST"],
      "/logbooks/:logbookId/goals/:goalId": ["PUT"]
    },
    "deny": {}
  },
  "GUEST": {
    "inherits": "",
    "allow": {
      "/logbooks/:logbookId": ["GET"],
      "/logbooks/:logbookId/logs": ["GET"]
    },
    "deny": {}
  }
}

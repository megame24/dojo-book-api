{
  "ADMIN": {
    "inherits": "USER",
    "allow": {
      "/categories": ["POST"]
    },
    "deny": {}
  },
  "USER": {
    "inherits": "GUEST",
    "allow": {
      "/logbook": ["POST"],
      "/logbook/:logbookId/log": ["POST"],
      "/logbook/:logbookId/log/:logId": ["PUT", "DELETE"],
      "/logbook/:logbookId/goal": ["POST"],
      "/logbook/:logbookId/goal/:goalId": ["PUT"]
    },
    "deny": {}
  },
  "GUEST": {
    "inherits": "",
    "allow": {
      "/logbook/:logbookId": ["GET"]
    },
    "deny": {}
  }
}

{
  "ADMIN": {
    "inherits": "USER",
    "allow": {},
    "deny": {}
  },
  "USER": {
    "inherits": "GUEST",
    "allow": {
      "/users/:userId/profile": ["GET", "PUT"]
    },
    "deny": {
      "/users/:userId/send-verification": ["GET"],
      "/users/:userId/verify": ["PUT"],
      "/users/register": ["POST"],
      "/users/login": ["POST"],
      "/users/forgot-password": ["POST"]
    }
  },
  "GUEST": {
    "inherits": "",
    "allow": {
      "/users/:userId/send-verification": ["GET"],
      "/users/:userId/verify": ["PUT"],
      "/users/register": ["POST"],
      "/users/login": ["POST"],
      "/users/forgot-password": ["POST"],
      "/users/:userId/reset-password": ["PUT"],
      "/users/google-sign-in-verify": ["POST"]
    },
    "deny": {}
  }
}
